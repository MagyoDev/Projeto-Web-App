<h1 class="text-3xl font-bold mb-4 text-center">Lista de Livros</h1>
<div class="mb-6">
    <ul class="space-y-4">
        {{#each books}}
            <li class="bg-white p-6 rounded-lg shadow flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-semibold">{{title}}</h2>
                    <p class="text-gray-600">{{author}}</p>
                    <p class="text-gray-500">{{description}}</p>
                </div>
                <div class="flex space-x-2">
                    <a href="/books/{{id}}/edit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">Editar</a>
                    <form action="/books/{{id}}/delete" method="POST">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded">Deletar</button>
                    </form>
                </div>
            </li>
        {{/each}}
    </ul>
</div>

<h2 class="text-2xl font-bold mb-4">Adicionar Novo Livro</h2>
<form action="/books" method="POST" class="bg-white p-6 rounded-lg shadow space-y-4">
    <input type="text" name="title" class="w-full border border-gray-300 p-2 rounded" placeholder="Título" required>
    <input type="text" name="author" class="w-full border border-gray-300 p-2 rounded" placeholder="Autor" required>
    <textarea name="description" class="w-full border border-gray-300 p-2 rounded" placeholder="Descrição"></textarea>
    <button type="submit" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded">Adicionar Livro</button>
</form>
